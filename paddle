from turtle import Turtle

#choose the distance that the paddle covers whenever the user will press the right or left arrow button
MOVE_DIST = 70


class Paddle(Turtle):
	#create the paddle
	def __init__(self):
		super().__init__()
		self.color('steel blue')
		self.shape('square')
		self.penup()
		self.shapesize(stretch_wid=1, stretch_len=10)
		self.goto(x=0, y=-280)

#define how the paddle moves to the left
	def move_left(self):
		self.backward(MOVE_DIST)

#define how the paddle moves to the right
	def move_right(self):
		self.forward(MOVE_DIST)
