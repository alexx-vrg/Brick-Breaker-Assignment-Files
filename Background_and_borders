#import turtle module
import turtle
#import the bricks creation function
from Bricks_function import create_bricks

#import the paddle variable and create a function for it
from Paddle import Paddle

paddle_instance = Paddle()

# Function to move the paddle to the left
def move_paddle_left():
    paddle_instance.move_left()

# Function to move the paddle to the right
def move_paddle_right():
    paddle_instance.move_right()


from ball import Ball
ball_instance = Ball()

# Create a turtle screen
background = turtle.Screen()

# Set the background color to black
background.tracer(0)
background.bgcolor("blue")

#create a boundary for the game
boundary = turtle.Turtle()
#set up the conditions of the boundary
boundary.color("black")
boundary.speed(0)

#move the starting position of the pen to draw the background
boundary.penup()
boundary.goto(-825,450)
boundary.pendown()

# Draw a black square
boundary.begin_fill()

#set a loop that will iterate 4 times to create the square
for i in range(2):
    boundary.forward(1650)
    boundary.right(90)
    boundary.forward(900)
    boundary.right(90)
boundary.end_fill()
boundary.ht()

create_bricks()

background.update()

#make the turtle look at user input
background.listen()
background.onkey(move_paddle_left, "Left")
background.onkey(move_paddle_right, "Right")

#continuously refresh the screen
while True:
    background.update()

# Close the turtle graphics window when clicked
turtle.done()
